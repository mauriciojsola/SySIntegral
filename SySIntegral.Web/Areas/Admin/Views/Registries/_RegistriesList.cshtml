
@model SySIntegral.Web.Areas.Admin.Controllers.RegistriesController.RegistriesModel

<h3>Últimos Registros</h3>
Mostrando @Model.LatestRegistries.Count de @Model.TotalRecords registros.
<div class="table-responsive-md">
    <table class="table table-striped table-bordered table-sm table-condensed">
        <thead>
            <tr>
                <th>Dispositivo</th>
                <th>Huevos Blancos</th>
                <th>Huevos Color</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.LatestRegistries)
            {
                <tr>
                    <td style="font-size: 12px;" class="pl-1">
                        <div>@record.UniqueId</div>
                        <div>(@record.DeviceDescription)</div>
                    </td>
                    <td>@record.WhiteEggsCount</td>
                    <td>@record.ColorEggsCount</td>
                    <td>@(record.RegistryDate.ToString("g"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>