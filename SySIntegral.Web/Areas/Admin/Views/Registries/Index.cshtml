@model SySIntegral.Web.Areas.Admin.Controllers.RegistriesController.RegistriesModel
@{
    ViewData["Title"] = "Registros";
    var todaysTotals = Model.TodaysTotals;
    var todaysWhiteCounter = todaysTotals != null ? todaysTotals.Totals.WhiteEggsCount : 0;
    var todaysColorCounter = todaysTotals != null ? todaysTotals.Totals.ColorEggsCount : 0;
}


@*<a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Roles" asp-action="Create">Crear Role</a>*@

<h2>Hoy</h2>

<div class="row no-gutters">
    <div class="col">
        <div class="card mr-1">
            <div class="card-body">
                <h5 class="card-title text-center">Blancos</h5>
                <h1 class="card-text text-center"><strong>@todaysWhiteCounter</strong></h1>

            </div>
        </div>
    </div>
    <div class="col">
        <div class="card ml-1">
            <div class="card-body" style="background-color: #ddb5b5d1; color: white; ">
                <h5 class="card-title text-center">Color</h5>
                <h1 class="card-text text-center"><strong>@todaysColorCounter</strong></h1>
            </div>
        </div>
    </div>
</div>
<button id="RefreshPage" class="btn btn-sm btn-info mt-1" name="RefreshPage">
    <i class="bi bi-arrow-clockwise"></i>
    Refrescar
</button>
<hr />
<h2>Totales Por Día</h2>
<div class="table-responsive-md">
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Huevos Blancos</th>
                <th>Huevos Color</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.DateTotals)
            {
                <tr>
                    <td>@record.Date.ToString("d")</td>
                    <td>@record.Totals.WhiteEggsCount</td>
                    <td>@record.Totals.ColorEggsCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<hr />
<h2>Registros</h2>
Mostrando @Model.Registries.Count de @Model.TotalRecords registros.
<div class="table-responsive-md">
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th>Dispositivo</th>
                <th>Huevos Blancos</th>
                <th>Huevos Color</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.Registries)
            {
                <tr>
                    <td>@record.DeviceId</td>
                    <td>@record.WhiteEggsCount</td>
                    <td>@record.ColorEggsCount</td>
                    <td>@(record.ReadTimestamp.HasValue ? record.ReadTimestamp.Value.ToString("g") : "VACÍO")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#RefreshPage').click(function () {
                console.debug("refreshing");
                window.location.reload();
            });
        });
    </script>

}
