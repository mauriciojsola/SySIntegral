@using SySIntegral.Web.Areas.Admin.Controllers
@using SySIntegral.Core.Entities.CheckPoints
@model SySIntegral.Web.Areas.Admin.Controllers.CheckPointDailyCounts

@foreach (var line in Model.CheckPoints)
{
    foreach (var date in line.GetUniqueDates())
    {
        <div>Día: @date.ToString("d")</div>
        <ul class="regtree">
            @{ RenderTree(line, date); }
        </ul>

    }

}


@functions {
    public void RenderTree(CheckPointDto item, DateTime date)
    {
        <li>
            <div class="text-center" style="background-color: #f4f4f4;">@item.Name</div>

            <div class="text-right counter">

                @if (item.CheckPointType != CheckPointType.Aggregator)
                {
                    <div class="text-right counter">Parcial: @item.GetPartialCount(date).ToString("N0")</div>
                }
                else
                {
                    <div>&nbsp;</div>
                }

            </div>
            <div class="text-right counter">Acumulado: @item.GetAggregatedCount(date).ToString("N0")</div>

        </li>
        @if (item.Children.Any())
        {
            <li>  &lt;</li>

        }
        @foreach (var child in item.Children)
        {
            RenderTree(child, date);
        }
    }
}