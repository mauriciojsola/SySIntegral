    </div>
    <div class="col-12 col-sm-6">
        <div class="mb-1">
            <select id="assetsFilter" multiple="multiple" tabindex="-1">

                @foreach (var a in Model.AssetDevices.ToList())
                {
                    <optgroup label="@a.AssetName">
