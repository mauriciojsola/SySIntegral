@model IEnumerable<SySIntegral.Core.Entities.Users.ApplicationUser>
@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>
<a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Users" asp-action="Create">Crear Usuario</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nombre</td>
            <td>Email</td>
            <td>Organización</td>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Organization.Name</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">
                    Editar
                </a>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Borrar
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>