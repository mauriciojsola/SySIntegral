@using SySIntegral.Core.Entities.Organizations
@model SySIntegral.Web.Areas.Admin.Models.Users.CreateUserViewModel

@{
    ViewData["Title"] = "Editar Usuario";
    var roles = (List<IdentityRole>)ViewData["roles"];
    var organizations = (List<Organization>)ViewData["organizations"];
}

<h1>Editar Usuario</h1>
<hr />
<div asp-validation-summary="All" class="text-danger"></div>
<div class="row">
    <div class="col-12">

        <form asp-route-returnUrl="" asp-action="Update" method="post">
            <h4>Editar usuario</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="OrganizationId"></label>
                <select asp-for="OrganizationId" class="form-control" asp-items='new SelectList(organizations,"Id","Name")'>
                </select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRole"></label>
                <select asp-for="UserRole" class="form-control" asp-items='new SelectList(roles,"Id","Name")'>
                </select>
                <span asp-validation-for="UserRole" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Grabar</button>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}